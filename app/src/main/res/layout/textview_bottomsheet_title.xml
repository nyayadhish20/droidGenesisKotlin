<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomsheet_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:backgroundTint="@color/transperentWhite"
        android:elevation="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_6sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.nyayadhish.droidgenesiskotlin.lib.utils.AppTextView
                android:id="@+id/tv_bs_title"
                style="@style/text_regular_dark"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="@string/choose_from"
                android:textSize="@dimen/_12ssp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/bottomsheet_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:backgroundTint="@color/transperentWhite"
        android:elevation="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_6sdp">

        <com.nyayadhish.droidgenesiskotlin.lib.utils.AppTextView
            android:id="@+id/tv_cancel"
            style="@style/text_medium_dark"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="@string/cancel"
            android:textAlignment="center"
            android:textColor="@color/textColorPinkLight"
            android:textSize="@dimen/_14ssp" />

    </androidx.cardview.widget.CardView>


</LinearLayout>


